<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <queries>
        <intent>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent>
    </queries>

    <uses-permission
        android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC"/>
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
    <application
        android:name=".DowntimeGuard"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DowntimeGuard"
        tools:targetApi="31">
<!--        <activity-->
<!--            android:name=".ui.theme.Dashboard"-->
<!--            android:exported="false"-->
<!--            android:label="@string/title_activity_dashboard"-->
<!--            android:theme="@style/Theme.DowntimeGuard" />-->
        <activity
            android:name=".ui.theme.MainScreen"
            android:exported="false"
            android:label="@string/title_activity_front_page"
            android:theme="@style/Theme.DowntimeGuard" />
<!--        <activity-->
<!--            android:name=".LayoutCompose"-->
<!--            android:exported="false"-->
<!--            android:label="@string/title_activity_layout_compose"-->
<!--            android:theme="@style/Theme.DowntimeGuard" />-->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.DowntimeGuard">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.theme.BlockActivity"
            android:exported="false"
            android:excludeFromRecents="true"
            android:taskAffinity=""
            android:launchMode="singleTop"
            android:theme="@style/Theme.DowntimeGuard.Fullscreen" />

        <!--            this is a background service-->
        <service
            android:name=".services.AppTrackerServices"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:label="@string/app_tracker_label"
            android:exported="false" >
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/app_tracker_accessibility_service"/>

        </service>
        <service android:name=".services.PostureBlockService"
            android:foregroundServiceType="dataSync"
            android:exported="false">
        </service>
        <service android:name=".services.BlockAccessibilityService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:exported="false">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>
    </application>

</manifest>